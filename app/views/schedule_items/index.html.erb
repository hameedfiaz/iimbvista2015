<h1>Listing schedule_items</h1>

<table border=1 class="table table-striped" width="100%">
  <tr>
    <th>Description</th>
    <th>Event start</th>
    <th>Event end</th>
    <th>Venue</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Destroy</th>
  </tr>

<% @schedule_items.each do |schedule_item| %>
  <tr>
    <td><%= schedule_item.description %></td>
    <td><%= schedule_item.event_start.strftime("%d-%m-%Y %I:%M%p") %></td>
    <td><%= schedule_item.event_end.strftime("%d-%m-%Y %I:%M%p") %></td>
    <td><%= schedule_item.venue %></td>
    <td><%= link_to 'Show', schedule_item %></td>
    <td><%= link_to 'Edit', edit_schedule_item_path(schedule_item) %></td>
    <td><%= link_to 'Destroy', schedule_item, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

