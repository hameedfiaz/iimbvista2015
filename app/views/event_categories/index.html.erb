<h1>Listing event_categories</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @event_categories.each do |event_category| %>
  <tr>
    <td><%= event_category.title %></td>
    <td><%= event_category.description %></td>
    <td><%= event_category.active %></td>
    <td><%= link_to 'Events', "/events/for_event_category/#{event_category.id}" %></td>
    <td><%= link_to 'Show', event_category %></td>
    <td><%= link_to 'Edit', edit_event_category_path(event_category) %></td>
    <td><%= link_to 'Destroy', event_category, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

