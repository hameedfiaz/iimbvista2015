<h1>Listing event_categories</h1>
<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
  <% @event_categories.each do |event_category| %>  
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingOne">
      <h4 class="panel-title">
        <a role="button" data-toggle="collapse" data-parent="#accordion" <%= "href='#collapse#{event_category.id}'" %> aria-expanded="true" <%= "aria-controls='collapse#{event_category.id}'" %>>
          <%= event_category.title %>
        </a>
      </h4>
    </div>
    <div <%= "id='collapse#{event_category.id}'" %> class="panel-collapse collapse" role="tabpanel" <%= "aria-labelledby='heading#{event_category.id}'" %> >
      <div class="panel-body">
        <p><b>Description</b><br/>
        <%= event_category.description.html_safe %></p>
        <p><b>Active</b><br/>
        <%= event_category.active %></p>
        <p><%= link_to 'Events', "/events/for_event_category/#{event_category.id}", class: "btn btn-default" %>
        <%= link_to 'Show', event_category, class: "btn btn-default" %>
        <%= link_to 'Edit', edit_event_category_path(event_category), class: "btn btn-default" %>
        <%= link_to 'Destroy', event_category, confirm: 'Are you sure?', method: :delete, class: "btn btn-default" %></p>
      </div>
    </div>
  </div>
  <% end %>
</div>

<%= link_to 'New Event category', new_event_category_path, class: "btn btn-warning" %>
