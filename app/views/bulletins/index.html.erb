<h1>Listing bulletins</h1>
<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
  <% @bulletins.each do |bulletin| %>  
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingOne">
      <h4 class="panel-title">
        <a role="button" data-toggle="collapse" data-parent="#accordion" <%= "href='#collapse#{bulletin.id}'" %> aria-expanded="true" <%= "aria-controls='collapse#{bulletin.id}'" %>>
          <%= bulletin.text %>
        </a>
      </h4>
    </div>
    <div <%= "id='collapse#{bulletin.id}'" %> class="panel-collapse collapse" role="tabpanel" <%= "aria-labelledby='heading#{bulletin.id}'" %> >
      <div class="panel-body">
        <p class="well"><b>Text</b><br/>
        <%= bulletin.text %></p>
        <b>Link ?</b><br/>
        <%= bulletin.link %></p>
        <p><b>Link URL</b><br/>
        <%= bulletin.link_url %></p>
        <%= link_to 'Show', bulletin, class: "btn btn-default" %>
        <%= link_to 'Edit', edit_bulletin_path(bulletin), class: "btn btn-default" %>
        <%= link_to 'Destroy', bulletin, confirm: 'Are you sure?', method: :delete, class: "btn btn-default" %></p>
      </div>
    </div>
  </div>
  <% end %>
</div>

<%= link_to 'New Bulletin', new_bulletin_path, class: "btn btn-warning" %>